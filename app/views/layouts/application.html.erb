<!DOCTYPE html>
<html>
<head>
  <title>Catalog</title>
  <%= stylesheet_link_tag "scaffold" %>
  <%= stylesheet_link_tag "depot", :media => "all" %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body id="store">
  <%= dark_feature 'show_title' do %>
  <div id="banner">
    <%= @page_title || "Catalog" %>
  </div>
  <% end %>
  <div id="columns">
    <div id="side">
      <div id="cart">

      <%= dark_feature 'show_cart' do %>

        <%= hidden_div_if(@cart.line_items.empty?, :id => "cart") do %>
          <%= render @cart %>
        <% end %>

      <% end %>

      </div>
      <a href="http://107.20.219.127:3000/">Home</a><br/>
    </div>
    <div id ="main">
<%= yield %>
    </div>
  </div>
</body>
</html>
